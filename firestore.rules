rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to read the list of products
    match /products {
       allow list: if true;
    }

    // Allow anyone to read individual products, but only authenticated
    // users can create or update them.
    match /products/{productId} {
      allow get: if true;
      allow create, update: if request.auth != null;
    }

    // Allow authenticated users to create votes
    match /products/{productId}/votes/{voteId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false; // Votes are aggregated, direct access isn't needed
    }

    // Allow users to manage their own profile information
    match /users/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Prevent users from deleting their own record for now
    }
  }
}
