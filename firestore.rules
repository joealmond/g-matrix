rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to READ products, but only authenticated users can write votes
    match /products/{productId} {
      allow read: if true;

      // Allow users to create and update their votes and for the product document to be updated.
      // This is still not fully secure, as a user could manipulate the average scores.
      // A more secure implementation would use Cloud Functions to calculate averages.
      allow write: if request.auth != null;

      match /votes/{voteId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
      }
    }

    // Default rule: block everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
