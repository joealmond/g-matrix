rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public Products: Everyone can READ, but only Admin can WRITE directly
    match /products/{productId} {
      allow read: if true; 
      allow write: if get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) != null; 
      // Note: Anonymous users don't need 'write' here because 
      // the Server Action (Admin SDK) does the writing!
    }

    // User Votes: Anonymous users CAN write here
    match /products/{productId}/votes/{voteId} {
      allow read: if true;
      allow create: if request.auth != null; // Anonymous is considered 'auth'
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    match /users/{userId} {
      allow get: if request.auth.uid == userId;
      allow list: if false;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if false;
    }

    match /roles_admin/{userId} {
        allow read, write: if get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) != null;
    }
  }
}
