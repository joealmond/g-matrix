rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Public Products: Everyone can READ, but only admins can WRITE/DELETE.
    match /products/{productId} {
      allow read: if true; 
      allow write: if isAdmin();
    }

    // User Votes: Logged-in (including anonymous) users can create votes.
    // They can only update or delete their own vote.
    match /products/{productId}/votes/{userId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == userId;
    }

    // User Profile: Users can only manage their own profile.
    match /users/{userId} {
      allow get: if request.auth.uid == userId;
      allow list: if false;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if false;
    }

    // Admin Roles: Only other admins can read or write to the admin roles collection.
    match /roles_admin/{userId} {
        allow read, write: if isAdmin();
    }
  }
}
