rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to read and list products
    match /products/{productId} {
      allow read: if true;

      // Allow authenticated users to create/update products and votes.
      // This is a simplification for now. A real app would have stricter controls.
      allow write: if request.auth != null;

      match /votes/{voteId} {
        allow read, create: if request.auth != null;
      }
    }

    // Default rule: block everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
