rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Public Products: Everyone can READ, but only admins can WRITE/DELETE.
    // Product updates for vote aggregation are handled via server-side actions
    match /products/{productId} {
      allow read: if true; 
      allow write: if isAdmin();
    }

    // User Votes: Logged-in (including anonymous) users can create votes.
    // They can only update or delete their own vote.
    // Admins can read all votes and delete any vote (for moderation).
    match /products/{productId}/votes/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if request.auth.uid == userId || isAdmin();
    }

    // User Profile: Users can only manage their own profile.
    match /users/{userId} {
      allow get: if request.auth.uid == userId;
      allow list: if false;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if false;
    }

    // Admin Roles:
    // A user can read their own role document.
    // Only existing admins can write to the admin roles collection.
    match /roles_admin/{userId} {
      allow get: if request.auth.uid == userId;
      allow list, write: if isAdmin();
    }
  }
}
